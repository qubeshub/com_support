	<fieldset name="spam">
		<field name="blacklist" type="textarea" rows="15" cols="40" label="COM_SUPPORT_CONFIG_BLACKLIST_LABEL" default="" description="COM_SUPPORT_CONFIG_BLACKLIST_DESC" />
